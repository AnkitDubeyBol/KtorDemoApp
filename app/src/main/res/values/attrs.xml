<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MizaButton" parent = "">

        <attr name="buttonType" format="enum">
            <enum name="primary" value="1"/>
            <enum name="secondary" value="2"/>
            <enum name="transparent" value="3"/>
        </attr>

        <attr name="mizaEnable" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="MizaEditText">

        <attr name="borderColor" format="enum">
            <enum name="black" value="1"/>
            <enum name="gray" value="2"/>
        </attr>

        <attr name="mizaETEnable" format="boolean"/>

        <attr name="mizaInputType" format="enum">
            <enum name="text" value="1"/>
            <enum name="number" value="2"/>
            <enum name="phone" value="3"/>
            <enum name="email" value="4"/>
            <enum name="password" value="5"/>
            <enum name="date" value="6"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="MizaDropDown">

        <attr name="borderType" format="enum">
            <enum name="black" value="1"/>
            <enum name="gray" value="2"/>
        </attr>


    </declare-styleable>

</resources>